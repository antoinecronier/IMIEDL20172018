<UserControl x:Class="IMIEDL20172018.UserControls.ClientUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IMIEDL20172018.UserControls"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Column="0">
            <TextBox Name="lblLastname" Text="{Binding CurrentClient.Lastname, Mode=TwoWay}"/>
        </Viewbox>
        <Viewbox Grid.Column="1">
            <TextBox Name="lblFirstname" Text="{Binding CurrentClient.Firstname, Mode=TwoWay}"/>
        </Viewbox>
        <Viewbox Grid.Column="3">
            <Label Name="lblMoney" Content="{Binding CurrentClient.Money, Mode=TwoWay}"/>
        </Viewbox>
    </Grid>
</UserControl>
